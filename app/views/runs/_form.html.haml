= form_for @run do |f|
  -if @run.errors.any?
    #error_explanation
      %h2= "#{pluralize(@run.errors.count, "error")} prohibited this run from being saved:"
      %ul
        - @run.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :program_id
    = f.number_field :program_id
  .field
    = f.label :ghc_compile_time
    = f.text_field :ghc_compile_time
  .field
    = f.label :super_compile_time
    = f.text_field :super_compile_time
  .field
    = f.label :distill_compile_time
    = f.text_field :distill_compile_time
  .field
    = f.label :ghc_size
    = f.number_field :ghc_size
  .field
    = f.label :super_size
    = f.number_field :super_size
  .field
    = f.label :distill_size
    = f.number_field :distill_size
  .actions
    = f.submit 'Save'
