.page-header
  %h1 Login to your account

- if @user_session.errors.any?
  .alert.alert-error.fade.in
    %a.close(data-dismiss="alert" href="#")
      x
    %h2
      = pluralize(@user_session.errors.count, "error")
      prevented you from logging in
    %ul
      - @user_session.errors.full_messages.each do |msg|
        %li
          = msg


.row
  .span6.offset3
    = form_for @user_session, :html => { :class => 'well form-horizontal' } do |f|
      .control-group
        = f.label :username, :class => 'control-label'
        .controls
          = f.text_field :username, :class => 'text-field'
      .control-group
        = f.label :password, :class => 'control-label'
        .controls
          = f.password_field :password, :class => 'password-field'
      .form-actions
        .pull-right
          = f.submit nil, :class => 'btn btn-primary'
          = link_to t('.cancel', :default => t("helpers.links.cancel")), root_path, :class => 'btn'